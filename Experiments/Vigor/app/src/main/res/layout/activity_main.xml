<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:maxHeight="1000dp"
    android:maxWidth="1000dp"
    android:minHeight="1000dp"
    android:minWidth="1000dp"
    tools:context="com.example.vigor.vigor.MainActivity">

    <Button
        android:id="@+id/logoutButt"
        android:layout_width="117dp"
        android:layout_height="97dp"
        android:layout_alignTop="@+id/graphButton"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnMakePlan"
        android:layout_width="117dp"
        android:layout_height="97dp"
        android:layout_above="@+id/graphButton"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:text="Make Plan"
        app:layout_constraintBottom_toTopOf="@+id/logoutButt"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/toDoButton"
        android:layout_width="117dp"
        android:layout_height="97dp"
        android:layout_alignTop="@+id/graphButton"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="ToDo List"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/logoutButt"
        app:layout_constraintStart_toEndOf="@+id/pedometer" />

    <Button
        android:id="@+id/pedometer"
        android:layout_width="117dp"
        android:layout_height="97dp"
        android:layout_above="@+id/graphButton"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="Pedometer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="58dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <Button
        android:id="@+id/graphButton"
        android:layout_width="112dp"
        android:layout_height="99dp"
        android:layout_below="@+id/btnViewProfile"
        android:layout_alignStart="@+id/btnViewProfile"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="5dp"
        android:text="Graphing"
        app:layout_constraintBottom_toTopOf="@+id/toDoButton"
        app:layout_constraintEnd_toStartOf="@+id/btnMakePlan"
        app:layout_constraintStart_toEndOf="@+id/btnViewProfile" />

    <Button
        android:id="@+id/btnViewProfile"
        android:layout_width="114dp"
        android:layout_height="97dp"
        android:layout_below="@+id/QuickAccessText"
        android:layout_alignStart="@+id/imageView2"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="View Profile"
        app:layout_constraintBottom_toTopOf="@+id/pedometer"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="368dp"
        android:layout_height="176dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/QuickAccessText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/QuickViewText"
        app:srcCompat="@android:drawable/ic_input_add" />

    <TextView
        android:id="@+id/QuickAccessText"
        android:layout_width="wrap_content"
        android:layout_height="28sp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btnViewProfile"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/QuickViewText"
        android:layout_width="99dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/WelcomeText"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="23dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>