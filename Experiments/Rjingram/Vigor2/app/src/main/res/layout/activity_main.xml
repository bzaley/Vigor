<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnDUMMY1"
        android:layout_width="117dp"
        android:layout_height="97dp"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_alignTop="@+id/buttonMessage"
        android:text="Dummy" />

    <Button
        android:id="@+id/btnDUMMY2"
        android:layout_width="117dp"
        android:layout_height="97dp"
        android:layout_above="@+id/buttonMessage"
        android:layout_alignEnd="@+id/imageView3"
        android:text="Dummy" />

    <Button
        android:id="@+id/btnDUMMY3"
        android:layout_width="117dp"
        android:layout_height="97dp"
        android:layout_alignTop="@+id/buttonMessage"
        android:layout_centerHorizontal="true"
        android:text="Dummy" />

    <Button
        android:id="@+id/btnVolley"
        android:layout_width="117dp"
        android:layout_height="97dp"
        android:layout_above="@+id/buttonMessage"
        android:layout_centerHorizontal="true"
        android:text="Volley" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="58dp"
        android:layout_height="71dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <Button
        android:id="@+id/buttonMessage"
        android:layout_width="112dp"
        android:layout_height="99dp"
        android:layout_alignStart="@+id/btnViewProfile"
        android:layout_below="@+id/btnViewProfile"
        android:text="Message" />

    <Button
        android:id="@+id/btnViewProfile"
        android:layout_width="114dp"
        android:layout_height="97dp"
        android:layout_alignStart="@+id/imageView2"
        android:layout_below="@+id/editText4"
        android:layout_marginTop="-202dp"
        android:text="View Profile" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Welcome Back Joe Bob!" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="353dp"
        android:layout_height="141dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="147dp"
        app:srcCompat="@android:drawable/ic_input_add" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView3"
        android:layout_marginBottom="202dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Quick Access" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:layout_marginBottom="-147dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Quick View" />
</RelativeLayout>